src: './src/sass/**/*.scss'
dest: './static/styleguide'
theme: 'herman'
shortcutIcon: './static/favicon.ico'
verbose: true
herman:
  extraLinks:
    - name: 'Accoutrement'
      url: 'https://oddbird.net/accoutrement/'
    - name: 'Herman'
      url: 'https://oddbird.net/herman/'
  displayColors:
    - 'hex'
    - 'hsl'
  customCSS: './static/built/app.css'
  sass:
    jsonFile: './static/built/json.css'
    sassOptions:
      loadPaths:
        - 'src/sass'
        - 'node_modules'
    use:
      - 'config'
display:
  access:
    - 'public'
