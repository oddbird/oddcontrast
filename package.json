{
  "name": "oddcontrast",
  "title": "OddContrast",
  "version": "0.0.1",
  "license": "BSD-3-Clause",
  "private": "true",
  "engines": {
    "node": "^16.14",
    "yarn": "^1.22"
  },
  "type": "module",
  "scripts": {
    "svelte:serve": "vite dev --host 0.0.0.0",
    "svelte:build": "vite build",
    "serve": "npm-run-all docs -p \"svelte:serve {@}\" watch:docs --",
    "build": "run-s docs svelte:build",
    "preview": "vite preview",
    "check": "svelte-check",
    "tsc": "tsc",
    "tsc:tests": "tsc -p test/tsconfig.json",
    "lint": "run-s prettier lint:js lint:sass check tsc tsc:tests",
    "lint:js": "yarn lint:js:ci --fix",
    "lint:js:ci": "eslint .",
    "prettier": "prettier --write .",
    "prettier:ci": "prettier --check .",
    "lint:sass": "yarn lint:sass:ci --fix",
    "lint:ci": "run-p prettier:ci lint:js:ci lint:sass:ci check tsc tsc:tests",
    "lint:sass:ci": "stylelint '**/*.scss'",
    "docs:json": "sass --load-path=node_modules src/sass/json.scss static/built/json.css",
    "docs:sass": "sass --load-path=node_modules src/sass/app.scss static/built/app.css",
    "docs:compile": "sassdoc 'src/sass/**/*.scss'",
    "docs": "run-s docs:sass docs:json docs:compile",
    "watch:docs": "chokidar \"src/sass/**/*.scss\" \"./.sassdocrc\" \"./README.md\" -c \"yarn docs\"",
    "test": "run-s test:js test:sass",
    "test:js": "vitest",
    "test:js:watch": "yarn test:js --watch",
    "test:sass": "mocha --loader=ts-node/esm --extension ts test/sass"
  },
  "dependencies": {
    "accoutrement": "^4.0.4",
    "colorjs.io": "^0.4.3"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^2.0.0",
    "@sveltejs/kit": "^1.11.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/svelte": "^3.2.2",
    "@types/node": "*",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "@vitest/coverage-c8": "^0.29.2",
    "chokidar-cli": "^3.0.0",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "jsdom": "^21.1.1",
    "mocha": "^10.2.0",
    "mockdate": "^3.0.5",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.21",
    "prettier": "^2.8.4",
    "prettier-plugin-svelte": "^2.9.0",
    "sass": "^1.59.2",
    "sass-true": "^7.0.0",
    "sassdoc": "^2.7.4",
    "sassdoc-theme-herman": "^5.0.1",
    "stylelint": "^15.2.0",
    "stylelint-config-standard-scss": "^7.0.1",
    "svelte": "3.55.1",
    "svelte-check": "^3.1.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5",
    "vite": "^4.1.4",
    "vitest": "^0.29.2"
  },
  "resolutions": {
    "tslib": ">=2"
  },
  "yarn-upgrade-all": {
    "ignore": [
      "@types/node"
    ]
  }
}
