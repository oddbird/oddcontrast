{
  "name": "oddcontrast",
  "title": "OddContrast",
  "version": "0.0.1",
  "license": "BSD-3-Clause",
  "engines": {
    "node": "16"
  },
  "type": "module",
  "scripts": {
    "svelte:dev": "svelte-kit dev --host 0.0.0.0",
    "svelte:build": "svelte-kit build",
    "dev": "npm-run-all docs -p \"svelte:dev {@}\" watch:docs --",
    "build": "run-s docs svelte:build",
    "package": "svelte-kit package",
    "preview": "svelte-kit preview",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "run-s prettier lint:js lint:sass check",
    "lint:js": "yarn lint:js:ci --fix",
    "lint:js:ci": "eslint .",
    "prettier": "prettier --write .",
    "prettier:ci": "prettier --check .",
    "lint:sass": "yarn lint:sass:ci --fix",
    "lint:ci": "run-p prettier:ci lint:js:ci lint:sass:ci check",
    "lint:sass:ci": "stylelint '**/*.scss'",
    "docs:json": "sass --load-path=node_modules src/sass/json.scss static/built/json.css",
    "docs:sass": "sass --load-path=node_modules src/sass/app.scss static/built/app.css",
    "docs:compile": "sassdoc 'src/sass/**/*.scss'",
    "docs": "run-s docs:sass docs:json docs:compile",
    "watch:docs": "chokidar \"src/sass/**/*.scss\" \"./.sassdocrc\" \"./README.md\" -c \"yarn docs\"",
    "test": "run-s test:js test:sass",
    "test:js": "NODE_OPTIONS=--experimental-vm-modules jest test/js --config test/js/jest.config.json",
    "test:sass": "NODE_OPTIONS=--experimental-vm-modules jest test/sass --config test/sass/jest.config.json",
    "test:watch": "yarn test:js --watchAll"
  },
  "dependencies": {
    "accoutrement": "^4.0.1",
    "svelte": "^3.47.0"
  },
  "devDependencies": {
    "@babel/core": "^7.17.9",
    "@babel/preset-env": "^7.16.11",
    "@sveltejs/adapter-auto": "^1.0.0-next.34",
    "@sveltejs/kit": "^1.0.0-next.314",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/svelte": "^3.1.1",
    "@types/jest": "^27.4.1",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "babel-jest": "^27.5.1",
    "chokidar-cli": "^3.0.0",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.1.4",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-svelte3": "^3.4.1",
    "jest": "^27.5.1",
    "mockdate": "^3.0.5",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.12",
    "prettier": "^2.6.2",
    "prettier-plugin-svelte": "^2.7.0",
    "sass": "^1.50.0",
    "sass-true": "^6.1.0",
    "sassdoc": "^2.7.3",
    "sassdoc-theme-herman": "^4.0.2",
    "stylelint": "^14.7.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard-scss": "^3.0.0",
    "stylelint-prettier": "^2.0.0",
    "svelte-check": "^2.7.0",
    "svelte-jester": "^2.3.2",
    "svelte-preprocess": "^4.10.6",
    "ts-jest": "^27.1.4",
    "tslib": "^2.3.1",
    "typescript": "^4.6.3"
  }
}
